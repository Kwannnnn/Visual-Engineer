{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "target": "es2017",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": [
      "typings"
    ],
    "types": [
      "@types/jest",
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist/**/**"]
}