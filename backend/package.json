{
  "name": "@visual-engineer/backend",
  "version": "0.1.0",
  "description": "A backend API for the Visual Editor application",
  "main": "src/index.ts",
  "author": "dhi2v.e1",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/saxion.nl/hbo-ict/2.4-project/dhi2ve1.git"
  },
  "license": "ISC",
  "scripts": {
    "test": "npx jest",
    "build": "npx tsc",
    "start": "npm run build && cross-env DEBUG=http PORT=3000 node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"cross-env DEBUG=http PORT=3000 nodemon -q dist/index.js\"",
    "lint": "npx eslint src --ext .ts",
    "lint:fix": "npx eslint src --ext .ts --fix",
    "db:update": "npx mikro-orm schema:update -r",
    "db:drop": "npx mikro-orm schema:drop -r"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.1.3",
    "@mikro-orm/postgresql": "^5.1.3",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "express": "^4.18.0",
    "express-winston": "^4.2.0",
    "winston": "^3.7.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.1.3",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.32",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
